<% include header.ejs %>
<!--<link rel="stylesheet" href="/stylesheets/user.css">-->

<style>

    @font-face
    {
        font-family: wawa;
        src: url(fonts/wawa.TTF);
    }

    #screenBody
    {
        font-family : STKaiti;
    }

    .journey-nav
    {
        width: 200px;
        margin: 20px auto;
        border-bottom: 1px solid RGBA(255, 153, 87, 1);
        padding-bottom: 20px;
        font-size: 23px;
        text-align: center;
        text-shadow: 0 2px 3px rgba(0, 0, 0, 0.6);
    }

    .journey-preference
    {
        width: 190px;
        margin: 30px auto;
    }

    #destination-text
    {
        margin: 5px 15px;
        border:1px solid rgb(133, 218, 123);
        border-radius: 2px;
        padding: 3px 5px;
    }

    .sub-select
    {
        margin: 10px 15px;
    }

    input[type='button']
    {
        padding:5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
        border:1px solid rgb(133, 218, 123);
        background-color: rgb(133, 218, 123);
        width: 23%;
    }

    .submit-btn
    {
        margin: 30px 0;
        text-align: center;
    }

</style>

<div id="screenBody">
    <nav class="journey-nav">
        <span><%= pageInfo.title %></span>
    </nav>
    <div class="journey-preference">
        <form id="destination-form">
            <section class="partset-div">
                <span>目的地设置</span>
                <div>
                    <div><input id="destination-text" placeholder="目的地or随便走走" name="destination-text"></div>
                    <div class="sub-select"><span>随便走走</span><input type="checkbox" id="casual" checked /></div>
                </div>
            </section>

            <section class="partset-div">
                <div>
                    <div class="favourite-text"><span>沿途兴趣点</span></div>
                    <div class="sub-select">
                        <div>
                            <span>特色小吃</span><input type="checkbox" id="casual"/>&nbsp;&nbsp;&nbsp;
                            <span>住宿</span><input type="checkbox" id="casual"/>
                        </div>
                        <div>
                            <span>银行atm</span><input type="checkbox" id="casual"/>&nbsp;&nbsp;&nbsp;
                            <span>加油站</span><input type="checkbox" id="casual"/>
                        </div>
                        <div>
                            <span>洗浴中心</span><input type="checkbox" id="casual"/>
                            <span>风景名胜</span><input type="checkbox" id="casual"/>
                        </div>
                    </div>
                </div>
            </section>

            <section class="partset-div">
                <div>
                    <div class="push-text"><span>推送设置</span></div>
                    <div class="sub-select">
                        <select>
                            <option value ="">时间间隔</option>
                            <option value ="5">5min</option>
                            <option value="10">10min</option>
                            <option value="20">20min</option>
                        </select><span>OR</span>
                        <input type="checkbox" id="push-set" checked />
                    </div>
                </div>
            </section>

            <div class="submit-btn">
                <input type="button" value="保存" id="submit">
            </div>
        </form>
    </div>

    </div>
</div>
<% include footer.ejs %>
<script src="/javascripts/user/register.js" type="text/javascript"></script>
